    {
      "name": "POST /stock (Prueba de Creación de Recurso)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Estado de respuesta 201', function () {",
              "    pm.response.to.have.status(201);",
              "});",
              "pm.test('ID de Recurso Válido', function () {",
              "    let response = pm.response.json();",
              "    pm.expect(response.stock_id).to.be.a('string').and.to.have.lengthOf(36);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"symbol\":\"GOOGL\", \"quantity\": 10, \"price\": 1500.50}"
        },
        "url": {
          "raw": "{{BASE_URL}}/stock",
          "host": ["{{BASE_URL}}"],
          "path": ["stock"]
        }
      },
